{% extends 'base.html.twig' %}

{% block title %}PressReview index{% endblock %}

{% block body %}
<div class="bloc padding">
    <h1>Revues de presse</h1>
    
    <a class="retour" href="{{ path('admin') }}">Retour à l'index</a>

    <table class="table admin">
        <thead>
            <tr>
                <th>Description</th>
                <th>Lien</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for press_review in press_reviews %}
            <tr onClick="javascript:document.location.href='{{ path('press_review_show', {'id': press_review.id}) }}'">
                <td>{{ press_review.description }}</td>
                <td>{{ press_review.lien }}</td>
                <td>
                    <a href="{{ path('press_review_edit', {'id': press_review.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune entrées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('press_review_new') }}">Nouveau</a>
</div>

{% endblock %}
