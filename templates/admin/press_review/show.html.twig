{% extends 'base.html.twig' %}

{% block title %}PressReview{% endblock %}

{% block body %}
<div class="bloc padding" id="TESTIMONY">
    <h1>PressReview</h1>
    
    <div class="fields">
        <p><span class="heading">Description : </span>{{ press_review.description }}</p>
        <p><span class="heading">Lien : </span>{{ press_review.lien }}</p>
    </div>

    <a class="retour" href="{{ path('press_review_index') }}">Retour</a>
    <a class="edit" href="{{ path('press_review_edit', {'id': press_review.id}) }}">Editer</a>
    <div class="del" onclick="useModal('confirmDelete');">Supprimer</div>

    <div class="modal alert" id="confirmDelete" style="display:none">
        <div class="body">
            <div class="head">
                <h1>Voulez-vous vraiment supprimer la revue ?</h1>
                <div class="close" onclick="this.parentNode.parentNode.parentNode.style.display = 'none';">
                    <div class="cross"></div>
                </div>
            </div>
            
            {{ include('admin/press_review/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
