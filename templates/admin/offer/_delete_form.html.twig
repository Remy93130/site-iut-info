<form method="post" action="{{ path('offer_delete', {'id': offer.id}) }}">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offer.id) }}">
    <div class="twobutton">
    	<div class="cancel button" autofocus onclick="document.getElementById('confirmDelete').style.display = 'none';">Annuler</div>
    	<button type='submit' class="btn button">Supprimer</button>
    </div>
</form>
