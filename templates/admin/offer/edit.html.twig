{% extends 'base.html.twig' %}

{% block body %}
<div class="bloc padding">
    <h1>Editer l'offre</h1>

    {{ include('admin/offer/_form.html.twig', {'button_label': 'Enregistrer'}) }}

    <a href="{{ path('offer_index') }}">Retour</a>
    <div class="button del" onclick="useModal('confirmDelete');">Supprimer</div>
	
	<div class="modal alert" id="confirmDelete" style="display:none">
        <div class="body">
            <div class="head">
                <h1>Voulez-vous vraiment supprimer l'offre ?</h1>
                <div class="close" onclick="this.parentNode.parentNode.parentNode.style.display = 'none';">
                    <div class="cross"></div>
                </div>
            </div>
            
            {{ include('admin/offer/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
