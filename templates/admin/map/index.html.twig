{% extends 'base.html.twig' %}

{% block body %}

<div class="bloc padding">
    <h1>Liste des IUTs</h1>
    
    <a class="retour" href="{{ path('admin') }}">Retour à l'index</a>

    <table class="table admin">
        <thead>
            <tr>
                <th>Longitude</th>
                <th>Latitude</th>
                <th class='description'>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for map in points %}
            <tr onClick="javascript:document.location.href='{{ path('map_show', {'id': map.id}) }}'">
                <td>{{ map.lon }}</td>
                <td>{{ map.lat }}</td>
                <td class="description">{{ map.content }}</td>
                <td>
                    <a href="{{ path('map_edit', {'id': map.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucune entrées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('map_new') }}">Nouveau</a>
</div>
{% endblock %}
