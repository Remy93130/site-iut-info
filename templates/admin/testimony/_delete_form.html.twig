<form method="post" action="{{ path('testimony_delete', {'id': testimony.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ testimony.id) }}">
    <div class="twobutton">
    	<div class="cancel button" autofocus onclick="document.getElementById('confirmDelete').style.display = 'none';">Annuler</div>
    	<button type='submit' class="btn button">Supprimer</button>
    </div>
</form>
