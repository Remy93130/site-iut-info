<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width">
        <meta name="description" content="Site officiel des IUTs Informatique">
        <link rel="icon" href="{{ asset("images/favicon.ico") }}" />
        <title>{% block title %}Portail National IUT Informatique{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset("style/style.css") }}">
        {% endblock %}
    </head>
    <body>
        <div id="NAVBAR">
            <div id="UPARROW" class='hidden' onclick="toTop()"></div>
            <a href="{{ path("index") }}">
                <div class=logo>
                    <img src="{{ asset("images/logo.png") }}">
                </div>
            </a>
            <div class="opennavbar" onclick="openNavbar(this, 'NAVBAR')">
                <div class=hamburger></div>
            </div>
            <div class=right>
                <a href="{{ path('formation') }}">
                    <div class=part><p>Formation</p></div>
                </a>
                <a href="{{ path('map') }}">
                    <div class=part><p>Carte des IUTs</p></div>
                </a>
                <a href="{{ path("press_review_blog") }}">
                    <div class=part><p>Revues de presse</p></div>
                </a>
                <a href="{{ path("usefull_link") }}">
                    <div class=part><p>Liens utiles</p></div>
                </a>
                <a href="{{ path("partnership") }}">
                    <div class="part"><p>Partenariats</p></div>
                </a>
                <a href="{{ path("offers") }}">
                    <div class="part"><p>Offres alternance / stage</p></div>
                </a>

            </div>
        </div>
        {% block body %}{% endblock %}
        {% block javascripts %}
            {# Ajouter tout les fichiers js communs aux page ici #}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
            <script type="text/javascript" src="{{ asset("js/script.js") }}"></script>
            <script async src="https://www.googletagmanager.com/gtag/js?id=UA-126259558-2"></script>
            <script>
                window.dataLayer = window.dataLayer || [];
                function gtag(){dataLayer.push(arguments);}
                gtag('js', new Date());
                gtag('config', 'UA-126259558-2');
            </script>

        {% endblock %}
    </body>
</html>
