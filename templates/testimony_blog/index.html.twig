{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}

	{% for testimony in testimonies %}
		{{ testimony.firstName }} <br>
		{{ testimony.name }} <br>
		{{ testimony.age }} <br>
		{{ testimony.state }} <br>
		{{ testimony.date|date("m/d/Y") }} <br>
		{% if testimony.picture %}
			<img src="data:image/png;base64,{{ testimony.picture }}">
		{% else %}
			<img src="https://www.qualiscare.com/wp-content/uploads/2017/08/default-user.png" style="max-width: 128px">
		{% endif %} <br>
		{{ testimony.content }} <br> <hr> <br>
	{% endfor %}
{% endblock %}
