{% extends 'base.html.twig' %}

{% block body %}
	<div id="OFFER">
		<div class="right">
			<div class="organisation">{{ offer.organisation }}</div>
        	<div class="duration">{{ offer.duration }}</div>
        	<div class="location">{{ offer.location }}</div>
		</div>
		<div class="left">
			<div class="title">{{ offer.type.name }} - {{ offer.title }} </div>
			<div class="description">{{ offer.description }}</div>
			<a class="retour" href="{{ path('offers') }}">Retour</a>
		</div>
    </div>

{% endblock %}
